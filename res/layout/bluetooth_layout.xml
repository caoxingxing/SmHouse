<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/wallpaper">
    <include layout="@layout/custom_title_child"></include>
    <ListView android:layout_width="fill_parent" android:id="@+id/bluetooth_listview"
		android:layout_height="300dip" android:cacheColorHint="#00000000"
		android:choiceMode="singleChoice" android:divider="#FFCC00">
	</ListView>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:text="@string/cancel" />

</LinearLayout>