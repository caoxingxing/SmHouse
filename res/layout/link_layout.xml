<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper">
    <include layout="@layout/custom_title_child"></include>
	<ListView android:layout_width="fill_parent" android:id="@+id/link_ctrl_listview"
		android:layout_height="wrap_content" android:cacheColorHint="#00000000"
		android:choiceMode="singleChoice" android:divider="#FFCC00"
		android:layout_marginTop="10dip">
	</ListView>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" 
	    android:layout_marginTop="20dip">

    <Button
	    android:id="@+id/open_all_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/allopen" 
	    android:layout_weight="1"
	    android:textSize="20dip"/>

	<Button
	    android:id="@+id/close_all_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/allclose" 
	    android:layout_weight="1"
	    android:textSize="20dip"/>
    </LinearLayout>
</LinearLayout>